{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "displayName": {
            "type": "string",
            "defaultValue": "custom"
        },
        "mailNickName": {
            "type": "string",
            "defaultValue": "custom"
        }
    },
    "resources": [
        {
            "apiVersion": "2018-09-01-preview",
            "type": "Microsoft.CustomProviders/resourceProviders",
            "name": "aadActions",
            "location": "eastus",
            "properties": {
                "resourceTypes": [
                    {
                        "name": "aadGroups",
                        "routingType": "proxy",
                        "endpoint": "https://aadActions.azurewebsites.net/api/"
                    }
                ]
            }
        },
        {
            "apiVersion": "2018-09-01-preview",
            "type": "Microsoft.CustomProviders/resourceProviders/aadGroups",
            "name": "aadActions/newGroup",
            "location": "eastus",
            "dependsOn": [
                "[resourceId('Microsoft.CustomProviders/resourceProviders/', 'aadActions')]"
            ],
            "properties": {
                "displayName": "[parameters('displayName')]",
                "mailNickName": "[parameters('mailNickName')]"
            }
        }
    ],
    "outputs": {
        "groupId": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.CustomProviders/resourceProviders/aadGroups', 'aadActions', 'newGroup')).id]"
        }
    }
}